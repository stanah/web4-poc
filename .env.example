# ============================================================
# Web4 PoC - Environment Variables
# ============================================================

# --- Blockchain (Sepolia) ---
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://rpc.sepolia.org
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id
# Server-side key for system operations (e.g., indexer sync, automated tasks)
SYSTEM_SIGNER_PRIVATE_KEY=0x...
# Deployer/admin key for contract interactions (e.g., deploy, upgrade)
PRIVATE_KEY=0x...

# --- Supabase ---
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# --- Ponder Indexer ---
PONDER_RPC_URL_SEPOLIA=https://rpc.sepolia.org
INDEXER_WEBHOOK_SECRET=your_webhook_secret

# --- Openfort (Account Abstraction) ---
NEXT_PUBLIC_OPENFORT_PUBLIC_KEY=pk_...
OPENFORT_SECRET_KEY=sk_...
NEXT_PUBLIC_OPENFORT_POLICY_ID=pol_...

# --- AI Provider ---
AI_PROVIDER=openrouter
AI_API_KEY=your_ai_api_key
AI_MODEL=google/gemini-2.0-flash-001
AI_BASE_URL=https://openrouter.ai/api/v1

# --- App ---
NEXT_PUBLIC_APP_URL=http://localhost:3000
