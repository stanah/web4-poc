{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "ponder:registry": ["./node_modules/ponder/dist/index.d.ts"],
      "ponder:schema": ["./ponder.schema.ts"],
      "ponder:api": ["./node_modules/ponder/dist/index.d.ts"]
    }
  },
  "include": ["src/**/*.ts", "ponder.config.ts", "ponder.schema.ts"]
}
